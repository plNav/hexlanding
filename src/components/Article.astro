---
// src/components/Article.astro
const { image, title, description } = Astro.props;
---

<style>
  .article {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 2rem;
    background: #222;
    color: #fff;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    margin-top: 1rem; /* Ensure minimal margin from previous section */
  }

  .article img {
    max-width: 100%;
    max-height: 300px; /* Maximum height for the image */
    width: auto;
    height: auto;
    border-radius: 10px;
  }

  .article-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .article-title {
    font-size: 2rem;
    margin-top: 1rem;
  }

  .article-description {
    font-size: 1rem;
    margin-top: 1rem;
  }

  @media (min-width: 768px) {
    .article {
      flex-direction: row;
      align-items: flex-start;
    }

    .article img {
      margin-right: 2rem;
    }

    .article-content {
      align-items: flex-start;
      text-align: left;
    }
  }
</style>

<article class="article">
  <img src={image} alt={title} class="article-image" />
  <div class="article-content">
    <h2 class="article-title text-secondary">{title}</h2>
    <p class="article-description">{description}</p>
  </div>
</article>
